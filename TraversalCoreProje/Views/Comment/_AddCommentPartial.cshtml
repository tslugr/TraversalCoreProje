@model EntityLayer.Concrete.Destination
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Yaz</h4>
    <p class="mb-4">
        E-posta hesabınız yayımlanmayacak. Gerekli alanlar işaretlendi *
    </p>
    <form method="post" asp-action="_AddCommentPartial" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="Ad Soyad*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" value="@ViewBag.CommentId" name="DestinationID" class="form-control">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorumu Yap </button>
        </div>
    </form>
</div>

